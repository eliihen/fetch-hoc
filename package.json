{
  "name": "fetch-hoc",
  "version": "0.3.0",
  "description": "A react HoC for fetching a resource and passing to props",
  "main": "./lib/index.js",
  "module": "es/index.js",
  "author": "Espen Henriksen",
  "license": "MIT",
  "scripts": {
    "precommit": "npm run flow && lint-staged",
    "prepublish": "npm run clean && npm run build",
    "flow": "flow",
    "prettier": "prettier --single-quote --trailing-comma=all",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src test",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/fetch-hoc.js",
    "build:umd:min": "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/fetch-hoc.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist es coverage"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm test",
      "npm run prettier -- --write",
      "git add"
    ]
  },
  "files": [
    "dist",
    "lib",
    "src",
    "es"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.4.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.52.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.6.1",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0",
    "prop-types": "^15.0.0-0 || ^16.0.0-0"
  },
  "keywords": [
    "react",
    "reactjs",
    "hoc",
    "higher",
    "order",
    "component",
    "fetch",
    "xhr",
    "data"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/esphen/fetch-hoc.git"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js"
  }
}
